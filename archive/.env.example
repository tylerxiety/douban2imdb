# Douban credentials
DOUBAN_USERNAME=your_douban_username
DOUBAN_PASSWORD=your_douban_password

# IMDb credentials
IMDB_USERNAME=your_imdb_username
IMDB_PASSWORD=your_imdb_password

# Optional: Paths for storing data
DOUBAN_EXPORT_PATH=data/douban_ratings.json
IMDB_EXPORT_PATH=data/imdb_ratings.json
MIGRATION_PLAN_PATH=data/migration_plan.json

# Anti-scraping configuration
# Set to "true" to run browsers in headless mode (less detectable if set to "false")
HEADLESS_BROWSER=false

# Douban scraping delays
DOUBAN_MIN_PAGE_DELAY=2.0
DOUBAN_MAX_PAGE_DELAY=5.0
DOUBAN_MIN_MOVIE_DELAY=1.0
DOUBAN_MAX_MOVIE_DELAY=3.0
DOUBAN_MAX_PAGES_PER_SESSION=20

# IMDb scraping delays
IMDB_MIN_PAGE_DELAY=3.0
IMDB_MAX_PAGE_DELAY=7.0
IMDB_MAX_PAGES_PER_SESSION=10

# Migration delays
MAX_MOVIES_PER_SESSION=15
COOLDOWN_MIN=3.0
COOLDOWN_MAX=8.0
SEARCH_COOLDOWN_MIN=5.0
SEARCH_COOLDOWN_MAX=12.0 